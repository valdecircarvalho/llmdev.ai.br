---
import creationsData from "../assets/creations.json";
import type { ProductCollection, ProductItem } from "../types/product";
import { ProductCard } from "./ProductCard";

const collections = creationsData as ProductCollection[];

// Flatten all items from all collections
const allItems: ProductItem[] = collections.flatMap(
  (collection) => collection.items,
);

// Pick 3 random products
const getRandomItems = (items: ProductItem[], count: number): ProductItem[] => {
  const shuffled = [...items].sort(() => 0.5 - Math.random());
  return shuffled.slice(0, count);
};

const randomProducts = getRandomItems(allItems, 3);
---

<section class="bg-slate-900/30 py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 flex items-center justify-between">
      <div>
        <h2 class="mb-4 text-3xl font-bold text-white">
          <span class="text-lumen">Things</span> We’ve Made
        </h2>
        <p class="text-slate-400">
          Small digital creations from us — stickers, emoji, and more along the way.
        </p>
      </div>
      <a
        href="/creations"
        class="inline-flex items-center gap-2 rounded-md border border-slate-600 bg-transparent px-4 py-2 text-sm font-medium text-slate-300 shadow-xs transition-all duration-300 hover:scale-105 hover:bg-slate-800 hover:text-accent-foreground focus-visible:border-ring focus-visible:ring-[3px] focus-visible:ring-ring/50 outline-none"
        style="min-width: 120px"
      >
        View All
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {randomProducts.map((product) => <ProductCard product={product} />)}
    </div>
  </div>
</section>
